<Window x:Class="SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toms="urn:TomsToolbox"
        xmlns:sampleApp="clr-namespace:SampleApp"
        Height="600" Width="800">
  <Window.ContextMenu>
    <ContextMenu>
      <MenuItem Header="Show Popup" Click="ShowPopup_Click" />
    </ContextMenu>
  </Window.ContextMenu>

  <TabControl toms:VisualComposition.RegionId="{x:Static sampleApp:RegionId.Main}"
              toms:DataTemplate.Role="{x:Static sampleApp:TemplateRoles.Content}" Margin="-1"/>

</Window>